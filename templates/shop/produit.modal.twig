<div class="modal-header">
	<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-6">
				<img src="{{asset_if(produit.imagePath, 'images/non-disponible.jpeg')}}" class="img-fluid" alt="Product Image">
			</div>
			<div class="col-md-6">
				<h2>{{ produit.nom }}</h2>
				<p class="text-justify">{{ produit.description}}</p>
				<p>Prix:
					{{ produit.prix}}$</p>
				<p>Catégorie:
					{{ produit.mainCategorie.categorie}}</p>
				<p>Quantité en stock:
					{{ produit.quantiteEnStock}}</p>
				<button type="button" class="btn btn-primary">Ajouter au panier</button>
			</div>
		</div>
	</div>
